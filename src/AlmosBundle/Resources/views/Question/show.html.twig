{% extends 'AlmosBundle::layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l, F j, Y') }}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>
        <img src="{{ asset(['bundles/almos/images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" class="large" />
        <div>
            <p>{{ blog.message }}</p>
        </div>
    </article>

    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>{{ 'comments'|trans({},"messages") }}</h3>
           {% include 'AlmosBundle:Comment:index.html.twig' with { 'comments': comments } %}
        </section>

        <h3>{{ 'addcomment'|trans({},"messages") }}</h3>

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <p>{{ 'can_comment'|trans({},"messages") }}</p>


       {{ render(controller( 'AlmosBundle:Comment:new', { 'blog_id': blog.id } )) }}
        {% else %}
            <p style="color: #6b9311">{{ 'registred'|trans({},"messages") }} </p>
    {% endif %}


    {#{{ render(controller( 'AlmosBundle:Comment:create', { 'question_id': blog.id } )) }}#}


    </section>

{% endblock %}