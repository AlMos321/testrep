<section class="section">
    <header>
        <h3>{{ 'tag'|trans({},"messages") }}</h3>
    </header>
    <p class="tags">
        {% for tag, weight in tags %}
        <span class="weight-{{ weight }}">{{ tag }}</span>
        {% else %}
    <p>{{ 'nostag'|trans({},"messages") }}</p>
    {% endfor %}
    </p>
</section>


<section class="section">
    <header>
        <h3>{{ 'addcomment'|trans({},"messages") }}</h3>
    </header>
    {% for comment in latestComments %}
        <article class="comment">
            <header>
                <p class="small"><span class="highlight">{{ comment.user }}</span> commented on
                    <a href="{{ path('AlmosBundle_question_show', { 'id': comment.blog.id, 'slug': comment.blog.slug }) }}#comment-{{ comment.id }}">
                        {{ comment.blog.title }}
                    </a>
                    <em><time datetime="{{ comment.created|date('c') }}">{{ comment.created|created_ago }}</time></em>
                </p>
            </header>
            <p>{{ comment.comment }}</p>
            </p>
        </article>
    {% else %}
        <p>{{ 'addcomment'|trans({},"messages") }}</p>
    {% endfor %}
</section>